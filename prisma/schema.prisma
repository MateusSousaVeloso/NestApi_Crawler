generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String @id @default(dbgenerated("gen_random_uuid()"))
  name            String
  phone_number    String   @unique
  email           String   @unique
  password        String
  preferences     Json?
  token           String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tripInfo        TripInfo?
  subscriptions   UserSubscription[]
  histories       History[]

  @@map("users")
}

model SubscriptionPlan {
  id           Int      @id
  name         String   // Ex: "Premium Mensal"
  price        Decimal  @db.Decimal(10, 2) 
  durationDays Int      

  users        UserSubscription[]
  @@map("subscription_plans")
}

model UserSubscription {
  id            String @id @default(dbgenerated("gen_random_uuid()"))

  payment_date  DateTime @default(now()) 
  end_date      DateTime // Data final (calculada: payment_date + plan.durationDays)
  status        String   @default("active") // 'active', 'expired', 'cancelled'

  userPhone     String   @unique @db.VarChar(20)
  user          User     @relation(fields: [userPhone], references: [phone_number], onDelete: Cascade, onUpdate: Cascade)

  planId        Int
  plan          SubscriptionPlan @relation(fields: [planId], references: [id])

  @@map("user_subscriptions")
}

model History {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  session_id String
  message    Json
  createdAt  DateTime @default(now())
  user User @relation(fields: [session_id], references: [phone_number], onDelete: Cascade, onUpdate: Cascade)

  @@map("histories")
  @@index([session_id]) 
}

enum TipoBusca {
  preco
  custo_beneficio
}

model TripInfo {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  origin        String?   @db.VarChar(10)
  destination   String?   @db.VarChar(10)
  departureDate DateTime? @db.Date
  tipoBusca     TipoBusca?
  
  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @default(now()) @db.Timestamptz(6)

  userPhone     String   @unique @db.VarChar(20)
  user          User     @relation(fields: [userPhone], references: [phone_number], onDelete: Cascade, onUpdate: Cascade)

  @@map("trip_info")
}

